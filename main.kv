<Menu>:	

	BoxLayout:
		orientation:'vertical'
		MenuButton:
			text:"Musics"
			on_press:root.manager.current = "music"
		MenuButton:
			text:"PlayLists"
			on_press:root.manager.current = "playlist"
		MenuButton:
			text:"Albuns"
			on_press:root.manager.current = "albuns"
		MenuButton:
			text:"Recorders"
			on_press:root.manager.current = "recorder"
		MenuButton:
			text:"Compositors"
			on_press:root.manager.current = "compositor"
			
		MenuButton:
			text:"Musical Period"
			on_press:root.manager.current = "musicper" 

Manager:
	id:screen_manager
	transition: FadeTransition()
	
	MusicScreen:
		name: 'music'
		manager: screen_manager
	PlayListScreen:
		name: 'playlist'
		manager: screen_manager
	AlbunsScreen:
		name: 'albuns'
		manager: screen_manager
	RecorderScreen:
		name:'recorder'
		manager: screen_manager
	CompositorScreen:
		name:'compositor'
		manager: screen_manager
	MusicalPeriod:
		name:'musicper'
		manager: screen_manager
	Menu:
		name:'menu'
		manager: screen_manager