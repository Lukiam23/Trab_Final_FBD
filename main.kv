#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<MenuButton@Button>:
	font_size:30
	size_hint:0.15,0.01 

<MusicScreen>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Musics"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.40}


