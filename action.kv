#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<MenuButton@Button>:
	font_size:30
	size_hint:0.15,0.01 

<MusicScreen>:
	FloatLayout:
		orientation:'vertical'
		Button:
		    pos_hint:{'top': 0.9,'right':0.95}
	        id: btn
	        text: 'Selec a playlist'
	        on_release: dropdown.open(self)
	        size_hint: 0.2,None
        	height: '48dp'

    	Widget:
			on_parent: dropdown.dismiss()
		DropDown:
	        id: dropdown
	       
	        pos_hint:{'top': 0.9,'right':0.95}
	        on_select: btn.text = 'Playlist: {}'.format(args[1])
	        

	        Button:
	            text: 'florence and...'
	            size_hint_y: None
	            height: '48dp'
	            on_release: dropdown.select('florence and...')
	        Button:
	            text: 'Value B'
	            size_hint_y: None
	            height: '48dp'
	            on_release: dropdown.select('B')
	        Button:
	            text: 'Value C'
	            size_hint_y: None
	            height: '48dp'
	            on_release: dropdown.select('C')
		Label:
			text: "Musics"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.40}



		ScrollView:
			id:scroll
			pos_hint:{'right':1}
			size_hint: (0.85, .8)
	        bar_width: 10
	       
	        effect_cls: "ScrollEffect"
	        scroll_type: ['bars']

	        BoxLayout:
	        	id:box
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height


<PlayListScreen>:
	box:box
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "PlayLists"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.41}

		ScrollView:
			id:scroll
			pos_hint:{'right':1}
			size_hint: (0.85, .8)
	        bar_width: 10
	       
	        effect_cls: "ScrollEffect"
	        scroll_type: ['bars']

	        BoxLayout:
	        	id:box
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height
				
		

<AlbumsScreen>:
	title:title
	FloatLayout:
		id:albumbox
		orientation:'vertical'
		Label:
			id:title
			text: "Albums"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.40}
		TextInput:
			id:textsearch
			pos_hint:{'top': 0.90,'right':0.89}
			size_hint:0.70,0.05
			hint_text: 'Description'
		Button:
			id:search
			text:"Search"
			size_hint:0.1,0.05
			pos_hint:{'top': 0.90,'right':0.99}
			on_press: root.search()
			on_release: textsearch.text = ''
		ScrollView:
			id:scroll
			pos_hint:{'right':1}
			size_hint: (0.85, .8)
	        bar_width: 10
	       
	        effect_cls: "ScrollEffect"
	        scroll_type: ['bars']

	        GridLayout:
	        	id:box
				cols:2
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height
		   
<GenericScreen>:
	FloatLayout:
		orientation:'vertical'
		Label:
			id:title
			font_size: '40dp'
			size_hint: (1, None)
			width:512
		    height: 100
		    text_size: self.size
    		halign: 'left'
    		valign: 'middle'
		    pos_hint:{'top': 1,'x':0.18}
		ScrollView:
			id:scroll
			pos_hint:{'right':1}
			size_hint: (0.85, .8)
	        bar_width: 10
	       
	        effect_cls: "ScrollEffect"
	        scroll_type: ['bars']

	        BoxLayout:
	        	id:box
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height

<RecorderScreen>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Recorders"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.42}
		    


<CompositorScreen>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Compositors"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.43}
		    

	
<MusicalPeriod>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Musical Period"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.45}
<Menu>:	
	BoxLayout:
		orientation:'vertical'
		MenuButton:
			text:"Musics"
			on_press:root.manager.current = "music"
			on_press:root.listAllMusics()
		MenuButton:
			text:"PlayLists"
			on_press:root.manager.current = "playlist"
			on_press:root.listAllPlaylist()
		MenuButton:
			text:"Albums"
			on_press:root.manager.current = "albums"
			on_press:root.listAllAlbums()
		MenuButton:
			text:"Recorders"
			on_press:root.manager.current = "recorder"
		MenuButton:
			text:"Compositors"
			on_press:root.manager.current = "compositor"
			
		MenuButton:
			text:"Musical\nPeriod"
			on_press:root.manager.current = "musicper" 

<Manager>:
	id:screen_manager
	transition: FadeTransition()
	
	MusicScreen:
		id:musicbutton
		name: 'music'
		manager: screen_manager
	PlayListScreen:
		name: 'playlist'
		manager: screen_manager
	AlbumsScreen:
		name: 'albums'
		manager: screen_manager
	RecorderScreen:
		name:'recorder'
		manager: screen_manager
	CompositorScreen:
		name:'compositor'
		manager: screen_manager
	MusicalPeriod:
		name:'musicper'
		manager: screen_manager
	Menu:
		name:'menu'
		manager: screen_manager
	GenericScreen:
		name:'generic'
		manager: screen_manager
