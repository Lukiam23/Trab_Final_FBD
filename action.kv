		Label:
			font_size: '20dp'
			size_hint: (1, None)
			width:512
		    height: 100
		    text_size: self.size
    		halign: 'left'
    		valign: 'middle'
			pos_hint:{'top': 0.5,'x':0.18}
			text:"Purchase Type:"
		Label:
			font_size: '20dp'
			size_hint: (1, None)
			width:512
		    height: 100
