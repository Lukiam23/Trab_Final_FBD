    		valign: 'middle'
		    pos_hint:{'top': 1,'x':0.18}
		Label:
			id:price
			font_size: '20dp'
			size_hint: (1, None)
			width:512
		    height: 100
		    text_size: self.size
    		halign: 'left'
    		valign: 'middle'
		    pos_hint:{'top': 0.899,'x':0.20}
		Label:
			id:dt_grav
			font_size: '20dp'
			size_hint: (1, None)
			width:512
		    height: 100
		    text_size: self.size
    		halign: 'left'
    		valign: 'middle'
		    pos_hint:{'top': 0.9,'x':0.32}
		Label:
			id:tipo_compra 
			font_size: '20dp'
			size_hint: (1, None)
			width:512
		    height: 100
		    text_size: self.size
    		halign: 'left'
    		valign: 'middle'
		    pos_hint:{'top': 0.9,'x':0.50}
		Label:
			id:dt_compra
			font_size: '20dp'
			size_hint: (1, None)
			width:512
		    height: 100
		    text_size: self.size
    		halign: 'left'
    		valign: 'middle'
		    pos_hint:{'top': 0.9,'x':0.68}

		Label:
			text: "Musics"
			font_size: '20dp'
			size_hint: (1, None)
			width:512
		    height: 100
		    text_size: self.size
    		halign: 'left'
    		valign: 'middle'
		    pos_hint:{'top': 0.8,'x':0.199}

		ScrollView:
			id:scroll
			pos_hint:{'right':0.97,'top':0.7}
			size_hint: (0.85, .8)
