		TextInput:
			id:price
			pos_hint:{'top': 0.65,'x':0.3}
			size_hint:0.07,0.05
			
		TextInput:
			id:purchaseDate
			pos_hint:{'top': 0.55,'x':0.3}
			size_hint:0.09,0.05
			
		TextInput:
			id:purchaseType
			pos_hint:{'top': 0.45,'x':0.3}
			size_hint:0.2,0.05
			
		TextInput:
			id:recordDate
			pos_hint:{'top': 0.35,'x':0.3}
			size_hint:0.09,0.05
			

			


<RecorderScreen>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Recorders"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.42}
		    


<CompositorScreen>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Compositors"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.43}
	
<MusicalPeriod>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Musical Period"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.45}
<Menu>:	
	BoxLayout:
		orientation:'vertical'
		MenuButton:
			text:"Musics"
			on_press:root.manager.current = "music"
			on_press:root.listAllMusics()
		MenuButton:
			text:"PlayLists"
			on_press:root.manager.current = "playlist"
			on_press:root.listAllPlaylist()
		MenuButton:
			text:"Albums"
			on_press:root.manager.current = "albums"
			on_press:root.listAllAlbums()
		MenuButton:
			text:"Recorders"
			on_press:root.manager.current = "recorder"
		MenuButton:
			text:"Compositors"
			on_press:root.manager.current = "compositor"
			
		MenuButton:
			text:"Musical\nPeriod"
			on_press:root.manager.current = "musicper" 

<Manager>:
	id:screen_manager
	transition: FadeTransition()
	
	MusicScreen:
		id:musicbutton
		name: 'music'
		manager: screen_manager
	PlayListScreen:
		name: 'playlist'
		manager: screen_manager
	AlbumsScreen:
		name: 'albums'
		manager: screen_manager
	RecorderScreen:
		name:'recorder'
		manager: screen_manager
	CompositorScreen:
		name:'compositor'
		manager: screen_manager
	MusicalPeriod:
		name:'musicper'
		manager: screen_manager
	Menu:
		name:'menu'
		manager: screen_manager
	GenericScreen:
		name:'generic'
		manager: screen_manager
	EditScreen:
		name:'editscreen'
		manager: screen_manager
