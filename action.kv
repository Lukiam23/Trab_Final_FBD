#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<MenuButton@Button>:
	font_size:30
	size_hint:0.15,0.01 

<MusicScreen>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Musics"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.40}


<PlayListScreen>:
	box:box
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "PlayLists"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.41}
		Button:
			text:"List All PlayLists"
			size_hint:0.2,0.05
			on_press:root.populate()
			pos_hint:{'top': 0.90,'right':1}

		ScrollView:
			id:scroll
			pos_hint:{'right':1}
			size_hint: (0.9, .7)
	        bar_width: 10
	       
	        effect_cls: "ScrollEffect"
	        scroll_type: ['bars']

	        GridLayout:
	        	id:box
				cols:1
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height 
				
		

<AlbumsScreen>:
	title:title
	FloatLayout:
		id:albumbox
		orientation:'vertical'
		Label:
			id:title
			text: "Albums"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.40}
		Button:
			text:"List All Albums"
			size_hint:0.2,0.05
			on_press:root.populate()
			pos_hint:{'top': 0.90,'right':1}
		Button:
			text:"Search"
			size_hint:0.2,0.05
			pos_hint:{'top': 0.85,'right':1}

		ScrollView:
			id:scroll
			pos_hint:{'right':1}
			size_hint: (0.85, .8)
	        bar_width: 10
	       
	        effect_cls: "ScrollEffect"
	        scroll_type: ['bars']

	        GridLayout:
	        	id:box
				cols:2
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height
		   


<GenericScreen>:

<RecorderScreen>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Recorders"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.42}
		    


<CompositorScreen>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Compositors"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.43}
		    

	
<MusicalPeriod>:
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "Musical Period"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.45}
<Menu>:	
	BoxLayout:
		orientation:'vertical'
		MenuButton:
			text:"Musics"
			on_press:root.manager.current = "music"
		MenuButton:
			text:"PlayLists"
			on_press:root.manager.current = "playlist"
		MenuButton:
			text:"Albums"
			on_press:root.manager.current = "albums"
		MenuButton:
			text:"Recorders"
			on_press:root.manager.current = "recorder"
		MenuButton:
			text:"Compositors"
			on_press:root.manager.current = "compositor"
			
		MenuButton:
			text:"Musical Period"
			on_press:root.manager.current = "musicper" 

<Manager>:
	id:screen_manager
	transition: FadeTransition()
	
	MusicScreen:
		name: 'music'
		manager: screen_manager
	PlayListScreen:
		name: 'playlist'
		manager: screen_manager
	AlbumsScreen:
		name: 'albums'
		manager: screen_manager
	RecorderScreen:
		name:'recorder'
		manager: screen_manager
	CompositorScreen:
		name:'compositor'
		manager: screen_manager
	MusicalPeriod:
		name:'musicper'
		manager: screen_manager
	Menu:
		name:'menu'
		manager: screen_manager
	GenericScreen:
		name:'generic'
		manager:screen_manager
