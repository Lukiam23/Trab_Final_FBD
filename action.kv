#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<MenuButton@Button>:
	font_size:30
	size_hint:0.15,0.01 

<MusicScreen>:
	FloatLayout:
		orientation:'vertical'
		Button:
			pos_hint:{'top': 0.9,'right':0.95}
	        id: btn
	        text: 'ADD'
	        on_release: root.add()
	        size_hint: 0.05,None
        	height: '48dp'

		TextInput:
			id:playlistName
			pos_hint:{'top': 0.90,'right':0.89}
			size_hint:0.12,0.065
			hint_text: 'Insert the playlist code'
	        
		Label:
			text: "Musics"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.40}

		ScrollView:
			id:scroll
			pos_hint:{'right':1}
			size_hint: (0.85, .8)
	        bar_width: 10
	       
	        effect_cls: "ScrollEffect"
	        scroll_type: ['bars']

	        BoxLayout:
	        	id:box
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height


<PlayListScreen>:
	box:box
	FloatLayout:
		orientation:'vertical'
		Label:
			text: "PlayLists"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.41}
		TextInput:
			id:newplaylist
			pos_hint:{'top': 0.90,'right':0.89}
			size_hint:0.70,0.05
			hint_text: 'New playlist'
		Button:
			id:search
			text:"ADD"
			size_hint:0.1,0.05
			pos_hint:{'top': 0.90,'right':0.99}
			on_press: root.add()
			on_release: newplaylist.text = ''

		ScrollView:
			id:scroll
			pos_hint:{'right':1}
			size_hint: (0.85, .8)
	        bar_width: 10
	       
	        effect_cls: "ScrollEffect"
	        scroll_type: ['bars']

	        BoxLayout:
	        	id:box
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height
				
		

<AlbumsScreen>:
	title:title
	FloatLayout:
		id:albumbox
		orientation:'vertical'
		Label:
			id:title
			text: "Albums"
			font_size: '40dp'
			size_hint: (None, None)
			width:512
		    height: 50
		    pos_hint:{'top': 1,'right':0.40}
		TextInput:
			id:textsearch
			pos_hint:{'top': 0.90,'right':0.89}
			size_hint:0.70,0.05
			hint_text: 'Description'
		Button:
			id:search
			text:"Search"
			size_hint:0.1,0.05
			pos_hint:{'top': 0.90,'right':0.99}
			on_press: root.search()
			on_release: textsearch.text = ''
		ScrollView:
			id:scroll
			pos_hint:{'right':1}
			size_hint: (0.85, .8)
	        bar_width: 10
	       
	        effect_cls: "ScrollEffect"
	        scroll_type: ['bars']

	        GridLayout:
	        	id:box
				cols:2
				orientation: 'vertical'
				size_hint_y: None
				height: self.minimum_height
		   
<GenericScreen>:
	FloatLayout:
		id:floatlayout
		orientation:'vertical'
		
		Label:
			id:title
			font_size: '40dp'
			size_hint: (1, None)
			width:512
		    height: 100
		    text_size: self.size
